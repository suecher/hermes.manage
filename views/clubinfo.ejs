<link href="lib/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet">
<script src="http://cdn.bootcss.com/bootstrap-fileinput/4.3.2/js/locales/zh.min.js"></script>

<script>
    $(document).on('ready', function() {
        $("#input-1").fileinput({
            language: 'zh', //设置语言
            uploadUrl: '/uploadclubpic?clubId='+currentClub._id, //上传的地址
